<odoo>
    <template id="material_supplier_form_view_portal" inherit_id="portal.portal_sidebar">
        <xpath expr="//div[hasclass('o_portal_sidebar')]" position="inside">
            <t t-if="page_name == 'material_supplier_quote_form_view'">
                <form method="post">
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="name">Name</label>
                        <div class="col-sm-10">
                            <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                            <input type="text" name="name" t-att-value="material_supplier_quote.material_quote_id.material_id.name" class="form-control" t-att-readonly="1"/>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="unit">Unit</label>
                        <div class="col-sm-10">
                            <input type="text" name="unit" t-att-value="material_supplier_quote.material_quote_id.unit" class="form-control" t-att-readonly="1"/>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="quantity">Quantity</label>
                        <div class="col-sm-10">
                            <input type="number" name="quantity" t-att-value="material_supplier_quote.material_quote_id.quantity" class="form-control" t-att-readonly="1"/>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="origin">Origin</label>
                        <div class="col-sm-10">
                            <input type="text" name="origin" t-att-value="material_supplier_quote.material_quote_id.material_id.origin" class="form-control" t-att-readonly="1"/>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="unit_price">Unit Price</label>
                        <div class="col-sm-10">
                            <input type="number" name="unit_price" t-att-value="material_supplier_quote.unit_price" t-att-readonly="material_supplier_quote.material_quote_id.material_paint_quotes_request_id.xml_id != 'utilities.group_ship_supplier'" class="form-control" placeholder="Enter unit price"/>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="currency_id">Currency</label>
                        <div class="col-sm-10">
                            <select name="currency_id" class="form-control" t-att-readonly="material_supplier_quote.material_quote_id.material_paint_quotes_request_id.xml_id != 'utilities.group_ship_supplier'">
                                <option value="VND" t-att-selected="material_supplier_quote.currency_id.name == 'VND'">VND</option>
                                <option value="USD" t-att-selected="material_supplier_quote.currency_id.name == 'USD'">USD</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="expected_delivery_date">Expected delivery date</label>
                        <div class="col-sm-10">
                            <input type="date" name="expected_delivery_date" t-att-value="material_supplier_quote.material_quote_id.expected_delivery_date" class="form-control" t-att-readonly="1"/>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="estimated_delivery_date">Estimated delivery date</label>
                        <div class="col-sm-10">
                            <input type="date" name="estimated_delivery_date" t-att-value="material_supplier_quote.estimated_delivery_date" t-att-readonly="material_supplier_quote.material_quote_id.material_paint_quotes_request_id.xml_id != 'utilities.group_ship_supplier'" class="form-control" placeholder="Enter estimated delivery date"/>
                        </div>
                    </div>

                    <div t-if="material_supplier_quote.material_quote_id.note" class="form-group row">
                        <label class="col-sm-2 col-form-label" for="vsico_note">Note from Vsico</label>
                        <div class="col-sm-10">
                            <input type="text" name="vsico_note" t-att-value="material_supplier_quote.material_quote_id.note" class="form-control" t-att-readonly="1"/>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="note">Note</label>
                        <div class="col-sm-10">
                            <input type="text" name="note" t-att-value="material_supplier_quote.note" t-att-readonly="material_supplier_quote.material_quote_id.material_paint_quotes_request_id.xml_id != 'utilities.group_ship_supplier'" class="form-control" placeholder="Enter note"/>
                        </div>
                    </div>

                    <div class="form-group row" style="margin-top:10px;">
                        <label class="col-sm-2 col-form-label" for="qr">QR code</label>
                        <div class="col-sm-10">
                            <img t-attf-src="data:image/jpg;base64,{{qrCode_base64}}" class="img-thumbnail" style="max-width: 200px; max-height: 200px;"/>
                        </div>
                    </div>

                    <div class="form-group row" style="margin-top:30px;">
                        <div class="col-sm-10">
                            <t t-if="material_supplier_quote.material_quote_id.material_paint_quotes_request_id.xml_id != 'utilities.group_ship_supplier'">
                                <button type="submit" t-attf-disabled="True" class="btn btn-primary">Save Edit</button>
                            </t>
                            <t t-if="material_supplier_quote.material_quote_id.material_paint_quotes_request_id.xml_id == 'utilities.group_ship_supplier'">
                                <button type="submit" class="btn btn-primary">Save Edit</button>
                            </t>
                            <a t-att-href="'data:image/png;base64,' + qrCode_base64" download="qr_code.png" class="btn btn-secondary">Download QR Code</a>
                        </div>
                    </div>
                </form>
            </t>
        </xpath>
    </template>
</odoo>
