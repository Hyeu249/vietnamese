<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_base_automation_form_in_vietnamese" model="ir.ui.view">
        <field name="name">base.automation.form.in.vietnamese</field>
        <field name="model">base.automation</field>
        <field name="arch" type="xml">
                <form> 
                    <sheet>
                        <group>
                            <group>
                                <field name="auto_action_type"/>
                            </group>
                            <group>
                                <field name="based_on"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Meta" name="meta">
                                <group>
                                    <group>
                                        <field name="filter_domain" invisible="1"/>
                                        <field name="model_id"/>
                                        <field name="name"/>
                                        <field name="active"/>
                                    </group>
                                    <group>
                                        <field name="trigger"/>
                                        <field name="state"/>
                                    </group>
                                </group>

                                <group>
                                    <field name="code" widget="ace" options="{'mode': 'python'}"/>
                                </group>
                            </page>
                        </notebook>
                   </sheet>
                </form>
        </field>
    </record>

</odoo>