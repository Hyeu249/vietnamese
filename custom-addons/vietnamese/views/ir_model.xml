<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_ir_model_in_vietnamese_form" model="ir.ui.view">
        <field name="name">ir.model.in.vietnamese.form</field>
        <field name="model">ir.model</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>

                    <group>
                        <field name="prefix_name"/>
                        <field name="parent_menu_id" options="{'no_create': True, 'no_create_edit':True}"/>
                    </group>

                    <notebook>
                        <page string="Fields" name="field_ids">
                            <field name="field_ids" 
                                context="{'default_ttype': 'char', 'default_model_id': active_id}"
                            >
                                <tree editable="bottom">
                                    <field name="model_id" invisible="1"/>
                                    <field name="vietnamese_model_id" invisible="1"/>
                                    <field name="name" invisible="1"/>
                                    <field name="default_char" invisible="1"/>
                                    <field name="name_select" invisible="1"/>
                                    <field name="sequence" widget='handle'/>
                                    <field name="field_description"/>
                                    <field name="ttype"/>
                                    <button name="open_edit_view" type="object" icon="fa-pencil-square-o"/>
                                </tree>
                            </field>
                        </page>

                        <page string="Access rights" name="access_ids">
                            <field name="access_ids" context="{'default_name': model}">
                                <tree editable="bottom">
                                    <field name="name" invisible="1"/>
                                    <field name="group_id" width="250px" domain="[('category_id.name', '=', 'Vietnamese Roles')]" options="{'no_create': True, 'no_create_edit':True}"/>
                                    <field name="perm_read"/>
                                    <field name="perm_write"/>
                                    <field name="perm_create"/>
                                    <field name="perm_unlink"/>
                                </tree>
                            </field>
                        </page>

                        <page string="Meta" name="Meta">
                            <group>
                                <group>
                                    <field name="model"/>
                                    <field name="sequence_id"/>
                                    <field name="sequence_base_automation_id"/>
                                    <field name="vietnamese_custom_table"/>
                                </group>
                                <group>
                                    <field name="tree_view_id"/>
                                    <field name="form_view_id"/>
                                    <field name="search_view_id"/>
                                    <field name="menu_id"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_ir_model_in_vietnamese_tree" model="ir.ui.view">
        <field name="name">ir.model.in.vietnamese.tree</field>
        <field name="model">ir.model</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="prefix_name"/>
            </tree>
        </field>
    </record>

    <record id="view_ir_model_in_vietnamese_search" model="ir.ui.view">
        <field name="name">ir.model.in.vietnamese.search</field>
        <field name="model">ir.model</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="prefix_name"/>
            </search>
        </field>
    </record>

    <record id="action_ir_model_in_vietnamese" model="ir.actions.act_window">
        <field name="name">Table</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">ir.model</field>
        <field name="view_mode">tree,form</field>
        <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('vietnamese.view_ir_model_in_vietnamese_tree')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('vietnamese.view_ir_model_in_vietnamese_form')})]"/>
        <field name="context" eval="{
                'default_vietnamese_custom_table': True,
                'vietnamese_view': True
            }"/>
        <field name="domain">[('vietnamese_custom_table', '=', True)]</field>
    </record>

    <menuitem id="menu_ir_model_in_vietnamese"
            name="Table" 
            parent="menu_vietnamese_operator"
            action="action_ir_model_in_vietnamese"
            sequence="10"/>

</odoo>